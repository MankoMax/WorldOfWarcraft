<Window x:Class="WorldofWarcraft.AccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldofWarcraft"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="AuthenticationWindow" Height="450" Width="800">
    <Grid Background="#ffdadada">
        <Border MinWidth="400" Margin="15" Background="#fff" VerticalAlignment="Center" Padding="30" MaxWidth="550" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0" />
            </Border.Effect>
            <StackPanel>
                <Grid Margin="0 0 0 20" HorizontalAlignment="Left">
                    <TextBlock Text="Account" FontSize="30" FontWeight="Bold" Margin="0,-17,0,37" />
                    <Button HorizontalAlignment="Left" Content="Create new Character" Margin="322,-9,0,37" Width="168" />
                </Grid>
                <ListView x:Name="listOfCharacters" Margin="10" HorizontalAlignment="Left" SelectionMode="Multiple" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
